@model ClienteModel
@{
    ViewData["Title"] = "Confirmação apagar o cliente";
}

<div class="text-center">
    <h3>Realmente deseja apagar o cliente (@Model.Nome)?</h3>
</div>

<div class="d-grid gap-2"> 
    <a class="btn btn-primary" asp-controller="Cliente" asp-action="Index">Cancelar exclusão</a>
    <a class="btn btn-danger" asp-controller="Cliente" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>
